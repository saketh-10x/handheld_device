<launch>
<!-- Launch file for Livox MID360 LiDAR with RGB camera -->

	<arg name="rviz" default="true" />
	
	<!-- Enable simulated time for bag playback (if using rosbag) -->
	<!-- <param name="/use_sim_time" value="true" /> -->
	
	<!-- Load MID360 configuration -->
	<rosparam command="load" file="$(find handheld_device)/config/MID360.yaml" />
	
	<!-- Static transform from camera_init to livox_frame -->
	<node pkg="tf" type="static_transform_publisher" name="camera_init_to_livox_broadcaster"
		args="0 0 0 0 0 0 camera_init livox_frame 100" />
	
	<!-- FAST-LIVO2 mapping node -->
	<node pkg="fast_livo" type="fastlivo_mapping" name="laserMapping" output="screen">
		<rosparam file="$(find handheld_device)/config/camera_MID360.yaml" />
		<!-- No remap needed - rosbag has /image_raw directly -->
	</node>
	
	<!-- Image transport republisher - NOT NEEDED if bag has /image_raw already -->
	<!-- Comment out if your rosbag already has /image_raw in raw format -->
	<!-- <node pkg="image_transport" type="republish" name="republish" 
		args="compressed in:=/left_camera/image raw out:=/left_camera/image" 
		output="screen" respawn="true"/> -->
	
	<!-- Launch RViz if requested -->
	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" 
			args="-d $(find fast_livo)/rviz_cfg/fast_livo2.rviz" />
	</group>

</launch>

